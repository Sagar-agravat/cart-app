<body>
    <%- include('includes/navigation.ejs') %>
    <div class="main-page">
    
       
        
        
                <div class="mainpage-container">
                    <div class="title"><p><%= obj.title %></p></div>
                    <img src="<%= obj.imageUrl %>" alt="image not found">
                    <div class="bottom">
                        <ul>
                            <li class="price">$<%= obj.price %></li>
